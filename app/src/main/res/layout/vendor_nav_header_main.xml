<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="40dp">

    <RelativeLayout
        android:id="@+id/llheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_header_imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile" />

        <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/nav_header_imageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_header_profilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/futuramediumbt"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/profile_name"
                android:textColor="@color/new_txt_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/nav_header_emailid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/futuramediumbt"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/email"
                android:textColor="@color/new_txt_color"
                android:textSize="14sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/nav_header_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_profile"
            android:layout_alignStart="@id/ll_profile"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/futuramediumbt"
            android:text="@string/edit"
            android:textColor="@color/new_light_green"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/vertical_dotted_line"
        android:layerType="software" />


</LinearLayout>
