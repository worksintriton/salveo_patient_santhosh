<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/left_arrow"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futuramediumbt"
            android:text="Pet Profile"
            android:textColor="@color/black"
            android:textSize="@dimen/big_txt_size"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/txt_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/futuramediumbt"
            android:gravity="end"
            android:text="@string/skip"
            android:textColor="@color/black"
            android:textSize="@dimen/big_txt_size" />




    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView"
        android:layout_marginBottom="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/phase_btn_width"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Other informations"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Yes"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="No"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="@dimen/phase_btn_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Spayed/Neutered"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rg_spayed">

                        <RadioButton
                            android:id="@+id/rb_spayed_yes"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_spayed_no"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                    </RadioGroup>
                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="@dimen/phase_btn_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Purebreed"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rg_purebreed">

                        <RadioButton
                            android:id="@+id/rb_purebreed_yes"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_purebreed_no"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                    </RadioGroup>
                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="@dimen/phase_btn_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Friendly with dogs"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rg_friendlywithdogs">

                        <RadioButton
                            android:id="@+id/rb_friendlywithdogs_yes"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_friendlywithdogs_no"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                    </RadioGroup>
                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="@dimen/phase_btn_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Friendly with cats"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rg_friendlywithcats">

                        <RadioButton
                            android:id="@+id/rb_friendlywithcats_yes"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_friendlywithcats_no"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                    </RadioGroup>
                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="@dimen/phase_btn_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Friendly with kids"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rg_friendlywithkids">

                        <RadioButton
                            android:id="@+id/rb_friendlywithkids_yes"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_friendlywithkids_no"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                    </RadioGroup>
                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="@dimen/phase_btn_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Microchipped"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rg_microchipped">

                        <RadioButton
                            android:id="@+id/rb_microchipped_yes"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_microchipped_no"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                    </RadioGroup>
                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="@dimen/phase_btn_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Tick free"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rg_tickfree">

                        <RadioButton
                            android:id="@+id/rb_tickfree_yes"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_tickfree_no"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                    </RadioGroup>
                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="@dimen/phase_btn_width"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Allows to clean private part"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rg_allowscleanprivate">

                        <RadioButton
                            android:id="@+id/rb_allowscleanprivate_yes"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_allowscleanprivate_no"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:buttonTint="@color/new_green_btn"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColor="@color/new_txt_color"
                            android:textSize="16sp" />

                    </RadioGroup>
                </LinearLayout>





            </LinearLayout>






        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_rounded_corner_btn"
            android:fontFamily="@font/futuramediumbt"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size_for_header"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/green"
        app:indicatorName="LineSpinFadeLoaderIndicator" />


</RelativeLayout>