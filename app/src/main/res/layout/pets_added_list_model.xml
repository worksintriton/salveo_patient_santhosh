<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--Dynamically adding Specialization Details-->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/material_cardview_add_specialization"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/added_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="5dp"
            android:drawablePadding="10dp"
            android:backgroundTint="@color/float_transparent"
            android:fontFamily="@font/futuramediumbt"
            android:hint="@string/pet_type"
            android:textColorHint="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:drawableRightCompat="@drawable/ic_baseline_close_white24" />

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>