<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_new"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/new_background_black">

        <RadioButton
            android:id="@+id/rb_choose_addr_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/new_green_btn"
            android:checked="false"
            android:fontFamily="@font/futuramediumbt"
            android:textColor="@color/new_txt_color"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:id="@+id/ll_shipdaddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/rb_choose_addr_list"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/futuramediumbt"
                    android:maxLines="1"
                    android:text="Mohammad Ashfaq"
                    android:textColor="@color/new_txt_color"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:ellipsize="end"
                        android:fontFamily="@font/futuramediumbt"
                        android:maxLines="1"
                        android:text="14/02/1994"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_phnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/futuramediumbt"
                    android:maxLines="1"
                    android:text="+91 - 9003237255"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/new_background_black"
                        android:padding="4dp"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:id="@+id/txt_addrs_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/futuramediumbt"
                            android:maxLines="1"
                            android:text="Home"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/txt_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/futuramediumbt"
                android:maxLines="2"
                android:text="225/1, Sample ABCD Nagar Main Road"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/txt_dist_pincode_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/futuramediumbt"
                android:maxLines="1"
                android:text="Salem, 636009, TamilNadu"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txt_user_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/futuramediumbt"
                android:maxLines="1"
                android:text="chennai"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/ll_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="ObsoleteLayoutParam"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        tools:ignore="ContentDescription"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:id="@+id/txt_edit_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/futuramediumbt"
                        android:text="EDIT"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ll_edit"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginStart="10dp"
                        android:id="@+id/img_delete"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_baseline_delete_24"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_marginStart="5dp"
                        android:id="@+id/txt_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:text="DELETE"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>




